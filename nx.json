{
  "extends": "nx/presets/npm.json",
  "$schema": "./node_modules/nx/schemas/nx-schema.json",
  "tasksRunnerOptions": {
    "default": {
      "runner": "nx/tasks-runners/default",
      "options": {
        "cacheableOperations": [
          "typecheck",
          "eslint",
          "prettier",
          "depcheck",
          "test",
          "clean",
          "build"
        ]
      }
    }
  },
  "targetDefaults": {
    "typecheck": {
      "dependsOn": ["^build"]
    },
    "test": {
      "dependsOn": ["^build"]
    },
    "build": {
      "dependsOn": ["^build", "clean"]
    },
    "dev": {
      "dependsOn": ["^build"]
    }
  }
}
